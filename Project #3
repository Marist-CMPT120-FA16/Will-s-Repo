<script>
var firstNorth = false;
var firstSouth = false;
var firstWest = false;
var firstEast = false;
var firstGreaterNorth = false;
var northPress = 0;
var currentLocation = "center";
var points = 0;

function btnGo_click(){
	var command = document.getElementById("txtCommand").value;
	    command = command.trim();
        command = command.toLowerCase();
		if ( command == "north" || command == "south" || command == "east" || command == "west") {
		    command = command.substr(0,1);
			}
				if (command == "n") {
					myNorthFunction(); 
				} else if (command == "s") {
					mySouthFunction(); 
				} else if (command == "e") {
				    myEastFunction();
				}  else if (command == "w") {
					myWestFunction(); 
					}
}

function myNorthFunction() {
   if(firstNorth == false && currentLocation == "center"){
		points += 5;
		firstNorth = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are now in the North.";
		currentLocation = "north";
   }else if(currentLocation == "north" && firstGreaterNorth ==false){
		points += 5;
		firstGreaterNorth = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are even greater North.";
		currentLocation ="greater north"
    }else if(currentLocation == "north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are even greater North.";
		currentLocation ="greater north"
   }else if(currentLocation == "greater north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou can't go here."	
        currentLocation ="greater north" 
   }else if(currentLocation =="south"){
		document.getElementById('taMain').value += "\nYou are back in center.";
		currentLocation ="center";
   }else if(currentLocation =="east"){
	    document.getElementById('taMain').value += "\nYou can't go here.";
   }else if(currentLocation =="west"){
	    document.getElementById('taMain').value += "\nYou can't go here."
   }else if(currentLocation =="center"){
         document.getElementById('taMain').value +="\nYou are now in the North.";
		 currentLocation = "north";
	}
}
function mySouthFunction() {
   if(firstSouth == false && currentLocation == "center"){
		points += 5;
		firstSouth = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are now in the South.";
		currentLocation = "south";
   }else if(currentLocation == "greater north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are back in the North."
		currentLocation = "north"
   }else if(currentLocation == "south"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou can't go here.";  
   }else if(currentLocation =="north"){
		document.getElementById('taMain').value +="\nYou are back in center.";
		currentLocation = "center"
   }else if(currentLocation == "east"){
        document.getElementById('taMain').value +="\nYou can't go here.";
   }else if(currentLocation =="west"){
	    document.getElementById('taMain').value +="\nYou can't go here.";
   }else if(currentLocation =="center"){
         document.getElementById('taMain').value +="\nYou are now in the South.";
		 currentLocation = "south";
   }
	console.log(currentLocation);
}
		
function myEastFunction() {
    if(firstEast == false && currentLocation == "center"){
		points += 5;
		firstEast = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are now in the East.";
		currentLocation = "east";
   }else if(currentLocation == "east"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou can't go here.";
   }else if(currentLocation == "greater north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou can't go here."
   }else if(currentLocation =="west"){
		document.getElementById('taMain').value +="\nYou are back in center.";
		currentLocation = "center"
   }else if(currentLocation =="north"){
		document.getElementById('taMain').value += "\nYou can't go here.";  
   }else if(currentLocation =="south"){
		document.getElementById('taMain').value += "\nYou can't go here.";
   }else if(currentLocation == "center"){
	    document.getElementById('taMain').value += "\nYou are now in the East.";
		currentLocation ="east";
   }
		
	console.log(currentLocation);	
}			   
function myWestFunction() {
    if(firstWest == false && currentLocation == "center"){
		points += 5;
		firstWest = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou are now in the West.";
		currentLocation = "west";
   }else if(currentLocation == "west"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou can't go here.";
   }else if(currentLocation == "greater north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		document.getElementById('taMain').value += "\nYou can't go here."
   }else if(currentLocation =="east"){
		document.getElementById('taMain').value +="\nYou are back in center.";
		currentLocation = "center"
   }else if(currentLocation =="south"){
        document.getElementById('taMain').value +="\nYou can't go here."; 
   }else if(currentLocation =="north"){
        document.getElementById('taMain').value +="\nYou can't go here."; 
   }else if(currentLocation =="center"){
	    document.getElementById('taMain').value +="\nYou are now in the West.";
		currentLocation ="west";
   }
	console.log(currentLocation);
}
		 
		
		
