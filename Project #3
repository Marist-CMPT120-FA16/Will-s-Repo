 <input type="text" 
              id = "txtCommand"
              name="txtCommand">

       <input type="button"
              value="Go" 
              onclick="btnGo_click();" /> 

<br>
<button onclick="myNorthFunction()">North</button>
<button onclick="mySouthFunction()">South</button>
<button onclick="myEastFunction()">East</button>
<button onclick="myWestFunction()">West</button>

