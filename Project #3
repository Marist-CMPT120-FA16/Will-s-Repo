<script>
var firstNorth = false;
var firstSouth = false;
var firstWest = false;
var firstEast = false;
var firstGreaterNorth = false;
var firstGreaterSouth = false;
var northPress = 0;
var currentLocation = "center";
var points = 0;

function updateDisplay(){
			var message = "";
			switch (currentLocation){
			case 0: message = "You are in the center";
				break;
			case 1: message = "You are now in the North.";
					break;
			case 2: message = "You are now in the South.";
					break;
			case 3: message = "You are in the East";
					break;
			case 4: message = "You are in the West";
					break;
			case 5: message = "You are in the greater North";
				    break;
			case 6: message = "You are in the greater South";
				    break;
			}
			document.getElementById("taMain").innerHTML = message;
		}






function locationNorth(){
	updateDisplay()
	currentLocation = 1;
	}

		
		
function locationSouth() {
	updateDisplay();
	currentLocation = 2; 
	}




function btnGo_click(){
	var command = document.getElementById("txtCommand").value;
	    command = command.trim();
        command = command.toLowerCase();
		if ( command == "north" || command == "south" || command == "east" || command == "west") {
		    command = command.substr(0,1);
			}
				if (command == "n") {
					myNorthFunction(); 
				} else if (command == "s") {
					mySouthFunction(); 
				} else if (command == "e") {
				    myEastFunction();
				}  else if (command == "w") {
					myWestFunction(); 
				} else displayMessage("Invalid command." +"\n" + "Valid commands are: North, South, East, West, N, S, E, W, n, s, e, w")

}

function myNorthFunction() {
	locationNorth();
	}
function mySouthFunction() {
   locationSouth();
   }
	console.log(currentLocation);

		
function myEastFunction() {
    if(firstEast == false && currentLocation == "center"){
		points += 5;
		firstEast = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You are now in the East.");
		currentLocation = "east";
   }else if(currentLocation == "east"){
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You can't go here.");
   }else if(currentLocation == "greater north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You can't go here.");
   }else if(currentLocation == "greater south"){
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You can't go here.");
   }else if(currentLocation =="west"){
		displayMessage("You are back in center.");
		currentLocation = "center"
   }else if(currentLocation =="north"){
		displayMessage("You can't go here.");  
   }else if(currentLocation =="south"){
		displayMessage("You can't go here.");
   }else if(currentLocation == "center"){
	    displayMessage("You are now in the East.");
		currentLocation ="east";
   }
		
	console.log(currentLocation);	
}			   
function myWestFunction() {
    if(firstWest == false && currentLocation == "center"){
		points += 5;
		firstWest = true;
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You are now in the West.");
		currentLocation = "west";
   }else if(currentLocation == "west"){
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You can't go here.");
   }else if(currentLocation == "greater north"){
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You can't go here.");
   }else if(currentLocation == "greater south"){
		document.getElementById('points').innerHTML = "Points: " + points;
		displayMessage("You can't go here.");
   }else if(currentLocation =="east"){
		displayMessage("You are back in center.");
		currentLocation = "center";
   }else if(currentLocation =="south"){
        displayMessage("You can't go here.");
   }else if(currentLocation =="north"){
        displayMessage("You can't go here."); 
   }else if(currentLocation =="center"){
	    displayMessage("You are now in the West.");
		currentLocation ="west";
   }
	console.log(currentLocation);
}
		 
	function displayMessage(msg) {
            var target = document.getElementById("taMain");
            target.value = msg + "\n" + target.value ;	
}		
</script>
</head>






<body>

<h1 style="font-family:impact;font-size:600%;color:red;"> Will's Game!</h1>
<h2 id = "points">Points: 0</h2>

